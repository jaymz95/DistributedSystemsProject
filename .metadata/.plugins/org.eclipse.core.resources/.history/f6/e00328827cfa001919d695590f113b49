syntax = "proto3";
package ie.gmit.ds;
import "google/protobuf/wrappers.proto";
import "google/protobuf/empty.proto";

option java_multiple_files = true;
option java_package = "ie.gmit.ds";

service PasswordService {
   rpc hashPassword(userId) returns (userId, hashedPassword, salt);
   rpc validatePasswords(hashedPassword) returns (google.protobuf.BoolValue);
}

message userId {
   string id = 1;
   string password = 2;
}

/*message password {
    string id = 1;
    string pass = 2;
}*/

message hashedPassword {
    string id = 1;
    string password = 2;
    string hash = 3;
    string salt = 4;
}

