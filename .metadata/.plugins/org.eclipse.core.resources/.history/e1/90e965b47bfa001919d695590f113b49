syntax = "proto3";
package ie.gmit.ds;
import "google/protobuf/wrappers.proto";
import "google/protobuf/empty.proto";

option java_multiple_files = true;
option java_package = "ie.gmit.ds";

service PasswordService {
   rpc hashPassword(userId, password) returns (userId, hashedPassword, salt);
   rpc validatePasswords(password, hashedPassword, salt) returns (google.protobuf.BoolValue);
}

message userId {
   string id = 1;
}

message password {
    string id = 1;
    string pass = 2;
}

message hashedPassword {
    string id = 1;
    string hash = 2;
}

message salt {
    string id = 1;
    string passwordSalt = 2;
}